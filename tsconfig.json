{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "allowJs": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
